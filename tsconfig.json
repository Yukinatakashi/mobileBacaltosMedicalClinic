{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "App.tsx",
    "index.ts",
    "index.tsx"
  ],
  "extends": "expo/tsconfig.base"
}
